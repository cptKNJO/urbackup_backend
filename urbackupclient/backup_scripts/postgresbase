set -e

. SYSCONFDIR/postgresbase.conf

alias errcho='>&2 echo'

TIME=`date`
errcho "Starting base backup of PostgreSQL at $TIME..."

su postgres -c "cd ~; pg_basebackup --format=tar -X fetch -D -"

TIME=`date`
errcho "Base backup of PostgreSQL finished at $TIME."

exit 0